{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-label {
            font-weight: bold;
        }
        .invite-form .form-control {
            margin-bottom: 10px;
        }
        .invite-form button[type="submit"] {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-4">Invite a User</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'class': 'invite-form'}}) }}
                <div class="form-group">
                    {{ form_label(form.email, "Email de l'invit√©", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.user, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.user) }}
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Invite</button>
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">Back</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
