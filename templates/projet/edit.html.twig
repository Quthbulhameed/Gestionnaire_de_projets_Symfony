{% extends 'base.html.twig' %}

{% block title %}Modifier un projet{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
        }

        .btn-primary {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        .btn-primary:focus,
        .btn-primary.focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_start(form) }}

                <h1 class="mb-4">Modifier un projet</h1>

                <div class="form-group">
                    <label for="inputNom">Nom du projet</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du projet'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group">
                    <label for="inputDescription">Description du projet</label>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description du projet'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    <label for="inputDateDebut">Date de début (JJ/MM/AAAA)</label>
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control', 'placeholder': 'Date de début (JJ/MM/AAAA)'}}) }}
                    {{ form_errors(form.dateDebut) }}
                </div>

                <div class="form-group">
                    <label for="inputDateFin">Date de fin (JJ/MM/AAAA)</label>
                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control', 'placeholder': 'Date de fin (JJ/MM/AAAA)'}}) }}
                    {{ form_errors(form.dateFin) }}
                </div>

                <div class="text-center">
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
