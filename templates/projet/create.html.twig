{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-floating label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
        }

        .form-control:hover {
            border-color: #80bdff;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }

        .form-control:focus {
            border-color: #007bff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-primary {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        .btn-primary:focus,
        .btn-primary.focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {{ form_start(form) }}

            <h1 class="mb-4">Créer un projet</h1>

            <div class="form-floating mb-3">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du projet'}}) }}
                <label for="inputNom">Nom du projet</label>
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-floating mb-3">
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                <label for="inputDescription">Description</label>
                {{ form_errors(form.description) }}
            </div>

            <div class="form-floating mb-3">
                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control', 'placeholder': 'Date de début'}}) }}
                <label for="inputDateDebut">Date de début</label>
                {{ form_errors(form.dateDebut) }}
            </div>

            <div class="form-floating mb-3">
                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control', 'placeholder': 'Date de fin'}}) }}
                <label for="inputDateFin">Date de fin</label>
                {{ form_errors(form.dateFin) }}
            </div>

            <div class="text-center">
                <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
