{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-floating label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
        }

        .form-control:hover {
            border-color: #80bdff;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }

        .form-control:focus {
            border-color: #007bff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-update {
            color: #fff;
            background-color: #FFA500;
            border-color: #FFA500;
        }

        .btn-update:hover {
            background-color: #FF8C00;
            border-color: #FF8C00;
        }

        .btn-update:focus,
        .btn-update.focus {
            box-shadow: 0 0 0 0.2rem rgba(255, 165, 0, 0.5);
        }

        .btn-back {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-back1 {
            color: #fff;
            background-color: orange;
            border-color: orange;
        }

        .btn-back:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        .btn-back:focus,
        .btn-back.focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Modifier la tâche "{{ tache.nom }}"</h1>

            {{ form_start(form) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.description, {'attr': {'class': 'form-control form-control-textarea', 'style': 'height: 200px;'}}) }}
                {{ form_row(form.dateEcheance, {'attr': {'class': 'form-control datepicker'}}) }}
                {{ form_row(form.priorite) }}
                {{ form_row(form.statut) }}

                <button type="submit" class="btn btn-update">Modifier la tâche</button>
                
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6 mx-auto text-center">
            <a href="{{ path('taches_afficher', {'id': tache.getProjet().getId()}) }}" class="btn btn-back1">Retour</a>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script>
    $(document).ready(function() {
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        });
    });
</script>
{% endblock %}
