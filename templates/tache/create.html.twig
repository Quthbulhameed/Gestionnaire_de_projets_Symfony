{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-floating label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
        }

        .form-control:hover {
            border-color: #80bdff;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }

        .form-control:focus {
            border-color: #007bff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-create {
            color: #fff;
            background-color: #FFA500;
            border-color: #FFA500;
        }

        .btn-create:hover {
            background-color: #FF8C00;
            border-color: #FF8C00;
        }

        .btn-create:focus,
        .btn-create.focus {
            box-shadow: 0 0 0 0.2rem rgba(255, 165, 0, 0.5);
        }

        .btn-back {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-back1 {
            color: #fff;
            background-color: orange;
            border-color: orange;
        }
        

        .btn-back:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        .btn-back:focus,
        .btn-back.focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {{ form_start(form) }}

            <h1 class="mb-4">Créer une tâche pour le projet "{{ projet.nom }}"</h1>

            <div class="form-floating mb-3">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la tâche'}}) }}
                <label for="inputNom">Nom de la tâche</label>
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-floating mb-3">
                {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-textarea', 'placeholder': 'Description de la tâche', 'style': 'height: 150px; resize: vertical;'}}) }}
                <label for="inputDescription">Description de la tâche</label>
                {{ form_errors(form.description) }}
            </div>

            <div class="form-floating mb-3">
                {{ form_widget(form.dateEcheance, {'attr': {'class': 'form-control datepicker', 'placeholder': 'Date d\'échéance'}}) }}
                <label for="inputDateEcheance">Date d'échéance</label>
                {{ form_errors(form.dateEcheance) }}
            </div>

            <div class="form-floating mb-3">
                {{ form_widget(form.priorite, {'attr': {'class': 'form-select', 'placeholder': 'Priorité'}}) }}
                <label for="inputPriorite">Priorité</label>
                {{ form_errors(form.priorite) }}
            </div>

            <div class="form-floating mb-3">
                {{ form_widget(form.statut, {'attr': {'class': 'form-select', 'placeholder': 'Statut'}}) }}
                <label for="inputStatut">Statut</label>
                {{ form_errors(form.statut) }}
            </div>

            <button type="submit" class="btn btn-create">Créer la tâche</button>

            {{ form_end(form) }}

            <a href="{{ path('app_home') }}" class="btn btn-back mt-3">Retour</a>

            <a href="{{ path('taches_afficher', {'id': projet.id}) }}" class="btn btn-back1 mt-3">Afficher les tâches de {{ projet.nom }}</a>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script>
    $(document).ready(function() {
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        });
    });
</script>
{% endblock %}
